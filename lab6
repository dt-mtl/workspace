import java.util.Scanner;

public class lab6 {
	public static void main(String[] args) {
		int size;
		int firstVal;
		
		Scanner input = new Scanner(System.in);
		
		System.out.print("Enter array size (minimum size 6 and an even number)? ");
		
		size = input.nextInt();
		
		System.out.print("\nStarting integer value: ");
		firstVal= input.nextInt();
		
		int numbers[] = new int[size];
		
		for(int pos = size ; pos>=1 ; pos--) {
			numbers[pos-1]=firstVal;
			firstVal= firstVal+4;
		}
		System.out.println("\nOriginal array:");
		for(int pos = 0 ; pos<size ; pos++) {
			System.out.print(numbers[pos]+"\t");
		}
		int old=numbers[1];
		for(int pos = 1 ; pos<size-1 ; pos+=2) {
			numbers[pos]=numbers[pos+2];
		}
		numbers[size-1]=old;
			//modify the array here
		
		System.out.println("\nArray after rotation:");
		for(int pos = 0 ; pos<size ; pos++) {
			System.out.print(numbers[pos]+"\t");
		}
		
	}
}
